#ifndef APP_SAMPLERCOLOR_HPP_
#define APP_SAMPLERCOLOR_HPP_

#include <sampler>

class SamplerColor : public Sampler
{
private:
	Color color;
public:
	SamplerColor( Color color )
	: color(color)
	{
	}
	
	virtual ~SamplerColor()
	{
	}
	
	virtual void at( const float& at , Color& color ) const
	{
		color = this->color;
	}
	
	virtual void at( const glm::vec2& at , Color& color ) const
	{
		color = this->color;
	}
	
	virtual void at( const glm::vec3& at , Color& color ) const
	{
		color = this->color;
	}
};

#endif // APP_SAMPLERCOLOR_HPP_
