#ifndef CONFIG_ABC_HPP_
#define CONFIG_ABC_HPP_

#include <stdtypes>
#include <singleton>

class Config
{
private:
	std::unordered_map<String,size_t> keys;
	std::vector<String> strings;
	std::vector<float> floats;
	std::vector<int> ints;
public:
	Config()
	{
	}

	template <class TC>
	void set( String key , const TC& value )
	{
	}

	template <class TC>
	bool get( String key , TC def , TC& target )
	{
		target = def;
		return false;
	}

	template <class TC>
	TC get( String key , TC def )
	{
		TC ret;
		get<TC>(key, def , ret);
		return ret;
	}
};

#define CONFIG singleton<Config>()

#endif // CONFIG_ABC_HPP_
