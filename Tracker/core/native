#ifndef COMMONNATIVE_H_
#define COMMONNATIVE_H_

#include "stdtypes"
#include "pixelbuffer"
#include "stdgfx"

#ifndef OS_NOT_DETECTED
# define USE_COMMON_NATIVELIB
#endif

namespace native 
{
	void log( const std::string& hint , std::string message );
	
	std::string getPath( std::string location );
	
	bool load( std::string location , std::string name , std::string& content );
	//bool save( std::string location , std::string name , std::string& content );
	
	template <class PixelType> bool load( std::string location , std::string name , PixelBuffer<PixelType>& buffer ) { return false; }
	template <> bool load( std::string location , std::string name , PixelBuffer<RGBALow>& buffer );
	
	template <class PixelType> bool save( std::string location , std::string name , PixelBuffer<PixelType>& buffer ) { return false; }
	template <> bool save( std::string location , std::string name , PixelBuffer<RGBALow>& buffer );
} // namespace native

#endif // COMMONNATIVE_H_
