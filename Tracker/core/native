#ifndef COMMONNATIVE_H_
#define COMMONNATIVE_H_

#include "stdtypes"
#include "pixelbuffer"
#include "stdgfx"

#ifndef OS_NOT_DETECTED
# define USE_COMMON_NATIVELIB
#endif

namespace native 
{
	void log( const String& hint , String message );
	
	String getPath( String location );
	
	bool load( String location , String name , String& content );
	//bool save( String location , String name , String& content );
	
	template <class PixelType> bool load( String location , String name , PixelBuffer<PixelType>& buffer ) { return false; }
	template <> bool load( String location , String name , PixelBuffer<RGBALow>& buffer );
	
	template <class PixelType> bool save( String location , String name , PixelBuffer<PixelType>& buffer ) { return false; }
	template <> bool save( String location , String name , PixelBuffer<RGBALow>& buffer );
} // namespace native

#endif // COMMONNATIVE_H_
