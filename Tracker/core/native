#ifndef COMMONNATIVE_H_
#define COMMONNATIVE_H_

#include "stdtypes"
#include "outputvideo"

#ifndef OS_NOT_DETECTED
# define USE_COMMON_NATIVELIB
#endif

namespace native 
{
	void log( const std::string& hint , std::string message );
	
	bool saveImage( std::string location , std::string name , int width , int height , pixelformat::Format inputformat , const void *pixels );

	bool open( std::string location , std::string name , int width , int height , pixelformat::Format inputformat , int dpi , int framerate , output::Video& output );
	bool append( output::Video& output , const void *pixels );
	bool close( output::Video& output );
} // namespace native

#endif // COMMONNATIVE_H_
