#ifndef LOG_ABC_HPP_
#define LOG_ABC_HPP_

#include "os"
#include "stdtypes"
#include "singleton"

#ifdef OS_DETECTED
# define USE_COMMON_LOG
#endif

class Log 
{
public:
	Log();
	virtual ~Log();

	virtual bool initialize();
	virtual void uninitialize();
	
	virtual void streamIt( const std::string& stream, const std::string& message );

	void message( const char* format , ... );
	void error( const char* format , ... );
	void warning( const char* format , ... );
	
	void print( const std::string& stream , const char* format , ... );
};

#define LOG singleton<Log>()

#endif // LOG_HPP_
