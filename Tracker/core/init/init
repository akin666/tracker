#ifndef INITAPPLICATION_HPP
#define	INITAPPLICATION_HPP

#include <application>

class CTinyJS;
namespace core  {

class Init : public Application
{
private:
	CTinyJS *js;
	std::string script;
	bool initialized;
public:
	Init();

    virtual ~Init();
    
    virtual bool init();
    
    virtual void run();
    
    virtual bool complete();

    virtual std::string getName() const;
};

}

#endif	// INITAPPLICATION_HPP

