#ifndef Tracker_outputvideo_hpp
#define Tracker_outputvideo_hpp

#include <fstream>
#include <iostream>
#include <pixelformat>
#include <stdtypes>

namespace output
{

class Video
{
private:
	std::ofstream out;
	size_t frameSize;
public:
	bool init( String path , int width , int height , pixelformat::Format inputformat , int dpi , int framerate );
	void append( const void *pixels );
	void close();
};

}

#endif
