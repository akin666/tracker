#ifndef Tracker_outputvideo_hpp
#define Tracker_outputvideo_hpp

#include <fstream>
#include <iostream>
#include <pixelformat>
#include <stdtypes>

namespace output
{

class Video
{
private:
	std::ofstream out;
	String name;
public:
	bool init(String name, String path , int width , int height , pixelformat::Format inputformat , int dpi , int framerate );
	void append( const void *pixels , size_t count );
	void close();

	String getName() const;
};

}

#endif
