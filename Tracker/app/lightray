#ifndef APP_LIGHTRAY_HPP_
#define APP_LIGHTRAY_HPP_

#include <traccore>

class LightRay
{
public:
	LightRay()
	: direction( 0.0f , 0.0f , 1.0f )
	, distance(0.0f)
	{}

	LightRay( const Color& intensity , const glm::vec3& direction , float distance )
	: intensity(intensity)
	, direction(direction)
	, distance(distance)
	{}

	Color intensity;
	glm::vec3 direction;
	float distance;
};

typedef std::vector<LightRay> LightRayArray;

#endif // APP_LIGHTRAY_HPP_
