#ifndef APP_MATERIAL_HPP_
#define APP_MATERIAL_HPP_

#include <traccore>

class Material
{
public:
	// Surface:
	Color reflection;
	Color emission;
	Color transparency; // 0.0 opaque, 1.0 transparent
	
	Color diffuse;
	Color refraction;
	
	std::string name;
public:
	Material();
	Material(const Material& other);
	~Material();
};

#endif /* APP_MATERIAL_HPP_ */
